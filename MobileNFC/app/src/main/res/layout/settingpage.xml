<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".settingpage" >

    <!--  -->

    <ImageView
        android:id="@+id/qr_image"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/ipEditText"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/qr_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/result_text" />
    <!--  -->
    <EditText
        android:id="@+id/ipEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enter"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/ip"
        android:text="@string/ip"
        android:textColor="@color/result_text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/enter"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qr_image"
        android:layout_alignRight="@+id/qr_image_2"
        android:text="@string/Test"
        android:textColor="@color/result_text" />

    <TextView
        android:id="@+id/valueViewTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ipEditText"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="18dp"
        android:text="请设置网络，并测试"
        android:textColor="@color/result_text" />

</RelativeLayout>