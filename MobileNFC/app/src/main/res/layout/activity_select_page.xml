<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectPage" >

    <AbsoluteLayout
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnSBo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        class="AbsoluteLayout" />

    <ViewStub
        android:id="@+id/viewStub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view1"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/btnEWM" />

    <Button
        android:id="@+id/BtnSBo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:layout_toLeftOf="@+id/btnEWM"
        android:background="@drawable/sendsb"
        android:gravity="bottom|center"
        android:text="声波取款"
        android:textColor="@color/status_text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnListen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEWM"
        android:layout_toLeftOf="@+id/BtnMNFC"
        android:background="@drawable/listen"
        android:gravity="bottom|center"
        android:text="扫一扫取款"
        android:textColor="@color/share_view"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnMNFC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEWM"
        android:layout_toRightOf="@+id/btnEWM"
        android:background="@drawable/moblienfc"
        android:gravity="bottom|center"
        android:text="手机NFC"
        android:textColor="@color/share_view"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnEWM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnSBo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/ewm"
        android:gravity="bottom|center"
        android:text="二维码取款"
        android:textColor="@color/share_view"
        android:textSize="18sp" />

    <Button
        android:id="@+id/BtnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnEWM"
        android:background="@drawable/setting"
        android:gravity="bottom|center"
        android:text="系统设置"
        android:textColor="@color/share_view"
        android:textSize="18sp" />

</RelativeLayout>
